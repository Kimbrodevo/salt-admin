extends layout

block body
  div.container-fluid(ng-controller='AppCtrl')  
    h2 Salt Stack Admin  
    div.row-fluid
      div.span2
        ul.nav.nav-pills.nav-stacked
          li(ng-class='{"active" : isSelected(view)}', ng-repeat='view in views | mainnav')               
            a(href='{{view.path}}', ng-click='setSelected(view)')  
              i(class='{{ view.icon }}', ng-class='{"icon-white" : isSelected(view)}')
              |  {{ view.label }}
      div.span10
        div(class="well", ng-view)
   
    div
      | Salt Stack Admin: v
      span(app-version)

  script(src='angular/angular.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
